{
    "name": "motd-monorepo",
    "private": true,
    "workspaces": [
        "backend",
        "frontend"
    ],
    "scripts": {
        "dev:backend": "npm run dev -w backend",
        "dev:frontend": "npm run dev -w frontend",
        "dev": "concurrently -k -n backend,frontend -c cyan,magenta \"npm:dev:backend\" \"npm:dev:frontend\"",
        "build": "npm run build -w backend && npm run build -w frontend"
    },
    "devDependencies": {
        "concurrently": "^9.0.0"
    }
}